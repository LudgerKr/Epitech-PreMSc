{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1>Login</h1>

    <form action="{{ path('security_login') }}" method="post">
        {% if error %}
            <div class="alert alert-danger">Are you sure you entered the correct credentials ?</div>
        {% endif %}
        <div class="form-group">
            <input placeholder="Adresse email" required name="_username"
                   type="text" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe" required name="_password"
                   type="password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>

    <div>
        <a  href="{{ path('app_forgotten_password') }}">Forgotten password</a>
    </div>

{% endblock %}